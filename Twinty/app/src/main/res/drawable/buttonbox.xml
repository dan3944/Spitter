<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#84dafd" />
            <gradient android:angle="-90" android:startColor="#84dafd" android:endColor="#5181fc"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#84dafd" />
            <solid android:color="#59a7ff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#84dafd" />
            <gradient android:angle="-90" android:startColor="#2aaae0" android:endColor="#84dafd" />
        </shape>
    </item>
</selector>